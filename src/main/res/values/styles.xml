<resources>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#00fff7</item>
        <item name="colorButtonNormal">#eef18b</item>
    </style>

    <!-- 弹出菜单的主题-->
    <style name="PopupMenuTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:colorBackground">#999999</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>
    <!-- 弹出菜单的样式 -->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:dropDownHorizontalOffset">4dp</item>
    </style>
    <!-- ToolBar的主题 -->
    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
