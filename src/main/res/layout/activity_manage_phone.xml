<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manage_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    android:orientation="vertical"
    tools:context="com.dujiang.myapplication.ManagePhoneActivity">

    <ImageView
        android:src="@drawable/editparent"
        android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--ID不显示出来-->
    <EditText
        android:id="@+id/et_manage_id1"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/editbox_back"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/name12" />

        <EditText
            android:id="@+id/et_manage_name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/editbox_back"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/phoneparent" />

        <EditText
            android:id="@+id/et_manage_phone1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@null" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_manage_delete1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/btn_change"
        android:text="删除" />

    <Button
        android:id="@+id/btn_manage_update1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/btn_change"
        android:text="更新" />

    <Button
        android:id="@+id/btn_manage_cancel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/btn_change"
        android:text="取消" />
</LinearLayout>
