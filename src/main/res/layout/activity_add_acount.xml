<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_acount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dujiang.myapplication.AddAcountActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_margin="5dp"
            android:src="@drawable/addaddount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--账号类型-->
        <LinearLayout
            android:padding="5dp"
            android:background="@drawable/editbox_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/type" />

            <EditText
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:id="@+id/et_add_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="账号类型" />
        </LinearLayout>

        <!--账号ID-->
        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:background="@drawable/editbox_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/id" />

            <EditText
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:id="@+id/et_add_userid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="账号ID" />
        </LinearLayout>

        <!--账号密码-->
        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:background="@drawable/editbox_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/pwd12" />

            <EditText
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:id="@+id/et_add_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="账号密码" />
        </LinearLayout>

        <!--账号备注-->
        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:background="@drawable/editbox_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/other" />

            <EditText
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:id="@+id/et_add_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="账号备注" />
        </LinearLayout>

        <Button
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_change"
            android:id="@+id/btn_add_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存" />

        <Button
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_change"
            android:id="@+id/btn_add_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消" />

    </LinearLayout>
</RelativeLayout>
