<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bing_pic_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.dujiang.myapplication.MainActivity">

        <LinearLayout
            android:background="#7202e3f7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/smssdk_black"
                android:text="Add Account Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_add_acount"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_add12" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:background="#70ff02fb"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/smssdk_black"
                    android:textSize="14dp"
                    android:text="Account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="61dp"
                    android:layout_marginTop="44dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
                <ImageView
                    android:id="@+id/iv_search_acount"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_look14"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:background="#7000ff22"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/smssdk_black"
                    android:textSize="14dp"
                    android:text="Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="44dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            <ImageView

                android:id="@+id/iv_select_parent"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_look13"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
                </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:background="#71ff0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_add_parent"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_add12" />

            <TextView
                android:textColor="@color/smssdk_black"
                android:text="Add Phone Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>